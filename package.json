{
  "name": "ai-meal-planner",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "prisma generate && prisma migrate deploy && prisma db seed && vite build",
    "preview": "vite preview",
    "prepare": "husky || echo 'husky skipped'",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:record": "dotenv -e .env -- sh -c 'OPENAI_RECORD_MODE=record vitest run'",
    "fixtures:record": "dotenv -e .env -- sh -c 'OPENAI_RECORD_MODE=record vitest run'",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "npx prisma db seed",
    "postinstall": "prisma generate",
    "deploy:db": "prisma db push && prisma db seed"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@sveltejs/kit": "^2.22.0",
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "@tailwindcss/forms": "^0.5.7",
    "@types/eslint": "^9.6.1",
    "@types/node": "^20.19.13",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vitest/coverage-v8": "^2.1.1",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.4.0",
    "prisma": "^5.7.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tsx": "^4.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.46.0",
    "vite": "^7.0.4",
    "vitest": "^2.1.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,svelte}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss,html,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "@sveltejs/adapter-vercel": "^5.10.2",
    "@tailwindcss/postcss": "^4.1.14",
    "autoprefixer": "^10.4.21",
    "openai": "^4.20.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
